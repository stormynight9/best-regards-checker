{
  "manifest_version": 3,
  "name": "Best Regards Checker",
  "version": "1.0",
  "description": "Warns you if you accidentally write &apos;Best retards&apos; instead of &apos;Best regards&apos; in Gmail",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://mail.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
